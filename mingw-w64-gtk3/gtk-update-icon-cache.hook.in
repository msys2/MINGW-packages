[Trigger]
Type = Path
Operation = Install
Operation = Upgrade
Operation = Remove
Target = @MINGW_HOOK_TARGET_PREFIX@/share/icons/*/
Target = !@MINGW_HOOK_TARGET_PREFIX@/share/icons/*/?*

[Action]
Description = Updating icon theme caches...
When = PostTransaction
Exec = /usr/share/libalpm/scripts/@MINGW_PACKAGE_PREFIX@-gtk-update-icon-cache.script
NeedsTargets
