# stored configuration values

fb_install_prefix=@FB_INSTALL_PREFIX@

fb_bindir=@FB_INSTALL_PREFIX@/bin
fb_sbindir=@FB_INSTALL_PREFIX@/bin
fb_libdir=@FB_INSTALL_PREFIX@/lib
fb_incdir=@FB_INSTALL_PREFIX@/include
fb_confdir=@FB_INSTALL_PREFIX@/etc/firebird
fb_docdir=@FB_INSTALL_PREFIX@/share/firebird/doc
fb_sampledir=@FB_INSTALL_PREFIX@/share/firebird/examples
fb_sampledbdir=@FB_INSTALL_PREFIX@/share/firebird/examples/empbuild
fb_intldir=@FB_INSTALL_PREFIX@/share/firebird/intl
fb_miscdir=@FB_INSTALL_PREFIX@/share/firebird/misc
fb_securedbdir=@FB_INSTALL_PREFIX@/etc/firebird
fb_msgdir=@FB_INSTALL_PREFIX@/etc/firebird
fb_logdir=@FB_INSTALL_PREFIX@/etc/firebird
fb_glockdir=@FB_INSTALL_PREFIX@/etc/firebird
fb_pluginsdir=@FB_INSTALL_PREFIX@/share/firebird/plugins
fb_tzdatadir=@FB_INSTALL_PREFIX@/share/firebird/tzdatadir

fb_cflags="-I$fb_incdir"
fb_libs="-L$fb_libdir -lfbclient @LIB_tommath@ @LIB_mpr@ @LIB_ws2_32@"

BuildVersion=@FB_VERSION@
PackageVersion=@FB_PACKAGE_VERSION@
CpuType=@CMAKE_SYSTEM_PROCESSOR@

Version="$BuildVersion-$PackageVersion.$CpuType"

fb_version=$Version


usage() {
  cat <<EOF

Usage $0 [Options]

Where Options are:
     --cflags
     --libs
     --embedlibs
     --bindir
     --udfdir
     --sbindir
     --confdir
     --docdir
     --sampledir
     --sampledbdir
     --helpdir
     --intldir
     --miscdir
     --securedbdir
     --msgdir
     --logdir
     --glockdir
     --pluginsdir
     --version
EOF
}

if test "$#" -eq 0 ; then
    usage
    exit 1
fi


while test $# -gt 0
  do
    case "$1" in
        --cflags) echo $fb_cflags ;;
        --libs) echo $fb_libs ;;
        --embedlibs) echo $fb_libs ;;
        --bindir) echo $fb_bindir ;;
        --sbindir) echo $fb_sbindir ;;
        --confdir) echo $fb_confdir ;;
        --docdir) echo $fb_docdir ;;
        --sampledir) echo $fb_sampledir ;;
        --intldir) echo $fb_intldir ;;
        --miscdir) echo $fb_miscdir ;;
        --securedbdir) echo $fb_securedbdir ;;
        --msgdir) echo $fb_msgdir ;;
        --logdir) echo $fb_logdir ;;
        --glockdir) echo $fb_glockdir ;;
        --pluginsdir) echo $fb_pluginsdir ;;
        --tzdatadir) echo $fb_tzdatadir ;;
        --sampledbdir) echo $fb_sampledbdir ;;
        --version) echo $fb_version ;;
        --help) usage ;;
        *) usage ;
    esac
    shift
  done
