# Maintainer: Alexey Pavlov <alexpux@gmail.com>

_realname=profit
_mingw_suff=mingw-w64-${CARCH}
pkgname="${_mingw_suff}-${_realname}-hg"
pkgver=r116.8046667edf0e
pkgrel=1
pkgdesc="Open Flight file format support library (mingw-w64)"
arch=('any')
license=('BSD')
depends=("${_mingw_suff}-gcc-libs")
makedepends=("mercurial" "${_mingw_suff}-cmake" "${_mingw_suff}-gcc")
provides=("${_mingw_suff}-${_realname}")
conflicts=("${_mingw_suff}-${_realname}")
url=('https://bitbucket.org/Coin3D/dime')
source=("${_realname}"::"hg+https://bitbucket.org/Alexpux/profit")
options=(!strip staticlibs)
md5sums=('SKIP')

pkgver() {
	cd "$srcdir/$_realname"
	printf "r%s.%s" "$(hg identify -n)" "$(hg identify -i)"
}

prepare() {
	cd ${srcdir}/${_realname}
}

build() {
	#export lt_cv_deplibs_check_method='pass_all'
	[[ -d "${srcdir}/build-${MINGW_CHOST}" ]] && rm -rf ${srcdir}/build-${MINGW_CHOST}
	mkdir ${srcdir}/build-${MINGW_CHOST}
	cd ${srcdir}/build-${MINGW_CHOST}
	../"${_realname}"/configure \
		--prefix=${MINGW_PREFIX} \
		--build=${MINGW_CHOST} \
		--host=${MINGW_CHOST} \
		--enable-shared \
		--disable-static \
		--enable-optimization \
		--disable-debug
	make -j1
}

package() {
	cd "${srcdir}/build-${MINGW_CHOST}"
	make DESTDIR=${pkgdir} install
}
