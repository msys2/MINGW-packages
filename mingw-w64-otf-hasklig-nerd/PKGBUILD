# Maintainer: Maksim Bondarenkov <maksapple2306@gmail.com>

_font=hasklig
_realname=otf-${_font}-nerd
pkgbase=mingw-w64-${_realname}
pkgname=${MINGW_PACKAGE_PREFIX}-${_realname}
pkgdesc="Patched font Hasklig (Hasklug) from nerd fonts library (mingw-w64)"
pkgver=3.0.2
pkgrel=1
arch=('any')
mingw_arch=('mingw32' 'mingw64' 'ucrt64' 'clang64' 'clang32' 'clangarm64')
url='https://github.com/ryanoasis/nerd-fonts'
_urlbase="${url}/releases/download/v${pkgver}"
license=('spdx:OFL-1.1')
options=('!debug' '!strip')
groups=("${MINGW_PACKAGE_PREFIX}-nerd-fonts")
source=("${_font}-${pkgver}.tar.xz::${_urlbase}/Hasklig.tar.xz")
sha256sums=('6638bfec8dc997efaa3b37a62efe13d116dc5e6cb70dca099b1577d0a4837fbb')
noextract=("${_font}-${pkgver}.tar.xz")

prepare() {
  rm -rf ${_font}
  mkdir ${_font}
  bsdtar xf ${_font}-${pkgver}.tar.xz -C ${_font}
}

package() {
  install -Dm644 ${_font}/*.otf -t "${pkgdir}${MINGW_PREFIX}/share/fonts/OTF"
  install -Dm644 ${_font}/LICENSE.md -t "${pkgdir}${MINGW_PREFIX}/share/licenses/${_realname}/"
}
