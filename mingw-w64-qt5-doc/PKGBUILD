             "${MINGW_PACKAGE_PREFIX}-postgresql"
            )
groups=("${MINGW_PACKAGE_PREFIX}-qt5")
_pkgfile="qt-everywhere-opensource-src-${pkgver}"
_pkgfqn="qt-everywhere-src-${pkgver}"
noextract=(${_pkgfile}.tar.xz)
