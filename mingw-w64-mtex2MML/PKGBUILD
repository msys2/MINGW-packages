# Maintainer: Dominic Sisneros <dsisnero@gmail.com>

_realname=mtex2MML
pkgbase=mingw-w64-${_realname}
pkgname="${MINGW_PACKAGE_PREFIX}-${_realname}"
pkgver=1.3.1
pkgrel=1
pkgdesc="A Bison grammar to convert TeX math into MathML"
arch=('any')
url="https://github.com/gjtorikian/mtex2MML/"
license=('LGPL')
license=('GPL' 'MPL' 'LGPL')
makedepends=("${MINGW_PACKAGE_PREFIX}-python3"
	     'bison'
	     'flex'
	     "${MINGW_PACKAGE_PREFIX}-cmake"
	     "${MINGW_PACKAGE_PREFIX}-pkg-config"
	    )
source=("https://github.com/gjtorikian/${_realname}/archive/v${pkgver}.tar.gz")
sha256sums=('977be19419572da01c4c86789c28a6a0d8cd74cdab6e30f77d6ab7dbd38e7195')

prepare() {
    cd "${srcdir}/${_realname}-${pkgver}"
    patch -Np1 -i "${startdir}/mtex2MML.patch"
}

build() {
    rm -rf "${srcdir}/build-${MINGW_CHOST}"
    mkdir "${srcdir}/build-${MINGW_CHOST}"
    cd "${srcdir}/build-${MINGW_CHOST}"

    MSYS2_ARG_CONV_EXCL="-DCMAKE_INSTALL_PREFIX=" \
		       ${MINGW_PREFIX}/bin/cmake \
		       -G"MSYS Makefiles" \
		       -DCMAKE_BUILD_TYPE=Release \
		       -DCMAKE_INSTALL_PREFIX="${MINGW_PREFIX}" \
		       -DBUILD_STATIC_LIBS=YES \
		       -DBUILD_SHARED_LIBS=YES \
		       -DBUILD_TESTING=YES \
		       ../${_realname}-${pkgver}

    make ${MAKEFLAGS}
}

# check() {
#     #make check
# }

package() {
    cd "${srcdir}/build-${MINGW_CHOST}"
    make DESTDIR="${pkgdir}" -j1 install
}


