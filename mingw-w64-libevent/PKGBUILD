# Maintainer: Chilledheart <rwindz0@gmail.com>

_realname=libevent
pkgname="${MINGW_PACKAGE_PREFIX}-${_realname}"
pkgver=2.0.22
pkgrel=1
pkgdesc="An event notification library"
arch=('any')
url="http://www.monkey.org/~provos/libevent/"
license=('BSD')
makedepends=("${MINGW_PACKAGE_PREFIX}-openssl")
source=(${_realname}-${pkgver}-stable.tar.gz:"https://sourceforge.net/projects/levent/files/${_realname}/${_realname}-2.0/${_realname}-${pkgver}-stable.tar.gz")
md5sums=('c4c56f986aa985677ca1db89630a2e11')

prepare() {
  cd "${srcdir}/${_realname}-$pkgver-stable"
}

build() {
  mkdir -p "${srcdir}/build-${CARCH}"
  cd "${srcdir}/build-${CARCH}"
  "${srcdir}/${_realname}-$pkgver-stable"/configure \
    --prefix=${MINGW_PREFIX} \
    --build=${MINGW_CHOST} \
    --host=${MINGW_CHOST} \
    --target=${MINGW_CHOST} \
    --sysconfdir=${MINGW_PREFIX}/etc
  make
}

package() {
  optdepends=("${MINGW_PACKAGE_PREFIX}-python2")

  cd "${srcdir}/build-${CARCH}"
  make DESTDIR="$pkgdir" install
}
