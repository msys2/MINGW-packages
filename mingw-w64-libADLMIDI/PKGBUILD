_realname=libADLMIDI
pkgbase=mingw-w64-${_realname}
pkgname="${MINGW_PACKAGE_PREFIX}-${_realname}"
pkgver=1.6.1
pkgrel=1
pkgdesc="A Software MIDI Synthesizer library with OPL3 (YMF262) emulator"
arch=('any')
mingw_arch=('mingw32' 'mingw64' 'ucrt64' 'clang64' 'clangarm64')
msys2_references=(
  'archlinux: libadlmidi-git'
)
msys2_repository_url="https://github.com/Wohlstand/libADLMIDI/"
url="https://github.com/Wohlstand/libADLMIDI/"
license=("spdx:GPL-3.0-or-later")
makedepends=("${MINGW_PACKAGE_PREFIX}-cc"
             "${MINGW_PACKAGE_PREFIX}-cmake"
             "${MINGW_PACKAGE_PREFIX}-ninja")
source=("https://github.com/Wohlstand/libADLMIDI/archive/refs/tags/v${pkgver}.tar.gz"{,.sig})
sha256sums=('9f14489ce1e6d020b8b90b6cf902e31d61b2d4e82122505cec6d5d4afebcb3e1'
            'SKIP')

prepare() {
  cd "${srcdir}"/${_realname}-${pkgver}
}

build() {
  mkdir "${srcdir}"/build-${MSYSTEM} && cd "${srcdir}"/build-${MSYSTEM}

  MSYS2_ARG_CONV_EXCL="-DCMAKE_INSTALL_PREFIX=" \
  ${MINGW_PREFIX}/bin/cmake.exe \
    -GNinja \
    -DCMAKE_INSTALL_PREFIX=${MINGW_PREFIX} \
    -DCMAKE_BUILD_TYPE=Release \
    -DlibADLMIDI_STATIC=ON \
    -DlibADLMIDI_SHARED=ON \
    -DWITH_MIDIPLAY=ON \
    -DWITH_EMBEDDED_BANKS=ON \
    -DWITH_CPP_EXTRAS=ON \
    -DUSE_NUKED_EMULATOR=ON \
    ../${_realname}-${pkgver}

  ${MINGW_PREFIX}/bin/cmake --build .
}

package() {
  cd "${srcdir}/build-${MSYSTEM}"

  DESTDIR="${pkgdir}" ${MINGW_PREFIX}/bin/cmake --install .
}
