# Maintainer: Maksim Bondarenkov <maksapple2306@gmail.com>

_realname=ffmpegthumbnailer
pkgbase=mingw-w64-${_realname}
pkgname="${MINGW_PACKAGE_PREFIX}-${_realname}"
pkgver=2.2.2
pkgrel=1
pkgdesc="Lightweight video thumbnailer that can be used by file managers (mingw-w64)"
url="https://github.com/dirkvdb/ffmpegthumbnailer"
license=('spdx:GPL-2.0-or-later')
arch=('any')
mingw_arch=('ucrt64' 'clang64' 'clangarm64')
depends=("${MINGW_PACKAGE_PREFIX}-ffmpeg"
         "${MINGW_PACKAGE_PREFIX}-libjpeg"
         "${MINGW_PACKAGE_PREFIX}-libpng")
makedepends=("${MINGW_PACKAGE_PREFIX}-cc"
             "${MINGW_PACKAGE_PREFIX}-cmake"
             "${MINGW_PACKAGE_PREFIX}-ninja")
source=("https://github.com/dirkvdb/${_realname}/archive/${pkgver}/${_realname}-${pkgver}.tar.gz"
        "https://github.com/dirkvdb/ffmpegthumbnailer/pull/198.patch"
        "https://github.com/dirkvdb/ffmpegthumbnailer/commit/efb5b618.patch")
sha256sums=('8c4c42ab68144a9e2349710d42c0248407a87e7dc0ba4366891905322b331f92'
            '300d3208fca6de6f7a90fbabbb8e58b9cf0cc4a4c9b1d2df0cd53ece1736646a'
            'c266d1c7cab2fa26dfee2410ea6864ab81a57e8784eda6574cd8237750b9e0e1')

prepare() {
  cd "${_realname}-${pkgver}"
  # fix build for ffmpeg>=5
  patch -Np1 -i "${srcdir}/198.patch"
  patch -Np1 -i "${srcdir}/efb5b618.patch"
}

build() {
  MSYS2_ARG_CONV_EXCL="-DCMAKE_INSTALL_PREFIX=" \
    "${MINGW_PREFIX}"/bin/cmake.exe \
      -DCMAKE_INSTALL_PREFIX="${MINGW_PREFIX}" \
      -DENABLE_THUMBNAILER=ON
      -S "${_realname}-${pkgver}" \
      -B "build-${MSYSTEM}"

  "${MINGW_PREFIX}"/bin/cmake.exe --build build
}

package() {
  DESTDIR="${pkgdir}" "${MINGW_PREFIX}"/bin/cmake.exe --install build
}
