        # 0101-0199 -> clang
        "0101-link-pthread-with-mingw.patch"
        # 0201-0299 -> rt
        # 0301-0399 -> lld
        "0303-ignore-new-bfd-options.patch"
        # 0401-0499 -> clang-tools-extra
        # 0501-0599 -> flang-rt
        "0501-add-municode-flag-on-mingw.patch"
        "0502-do-not-use-clock_gettime-on-mingw.patch"
        # 0601-0699 -> flang
        "0601-cmake-22162.patch"
        "0602-Fix-c_long_double-value-on-mingw-aarch64.patch"
        # 0901-0999 -> whole tree
        )
sha256sums=('8863980e14484a72a9b7d2c80500e1749054d74f08f8c5102fd540a3c5ac9f8a'
