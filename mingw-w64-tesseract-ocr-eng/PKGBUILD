# Maintainer: Ray Donnelly <mingw.android@gmail.com>
# The traineddata and related files for English language should be placed in tesseract ocr's tessdata directory

_realname=tesseract-ocr-eng
pkgbase=mingw-w64-${_realname}
pkgname=("${MINGW_PACKAGE_PREFIX}-${_realname}")
pkgver=3.04.00
pkgrel=2
pkgdesc="English Language tessdata for Tesseract OCR engine (mingw-w64)"
arch=('any')
url="https://github.com/tesseract-ocr/tessdata"
license=("Apache License 2.0")
depends=()
source=("eng.traineddata::https://github.com/tesseract-ocr/tessdata/blob/master/eng.traineddata?raw=true"
        "eng.cube.bigrams::https://github.com/tesseract-ocr/tessdata/blob/master/eng.cube.bigrams?raw=true"
        "eng.cube.fold::https://github.com/tesseract-ocr/tessdata/blob/master/eng.cube.fold?raw=true"
        "eng.cube.lm::https://github.com/tesseract-ocr/tessdata/blob/master/eng.cube.lm?raw=true"
        "eng.cube.nn::https://github.com/tesseract-ocr/tessdata/blob/master/eng.cube.nn?raw=true"
        "eng.cube.params::https://github.com/tesseract-ocr/tessdata/blob/master/eng.cube.params?raw=true"
        "eng.cube.size::https://github.com/tesseract-ocr/tessdata/blob/master/eng.cube.size?raw=true"
        "eng.cube.word-freq::https://github.com/tesseract-ocr/tessdata/blob/master/eng.cube.word-freq?raw=true"
        "eng.tesseract_cube.nn::https://github.com/tesseract-ocr/tessdata/blob/master/eng.tesseract_cube.nn?raw=true"
)
sha256sums=('c0515c9f1e0c79e1069fcc05c2b2f6a6841fb5e1082d695db160333c1154f06d'
            '64adf2cc0b2a6705368aa357224d1a6739035d5fe892cd0cc457016df5b4280f'
            '2b229895623934b493fe69c51fcc387295d91af8b4e43cc51748b3d269a95eed'
            'a6f769245b0a55f42a3ce157cd19d96828483c3384c6483433ed83579ea16e36'
            '8f345f1c19772dd71a5214bc94175ccf647c003ab77e4143fde48f11bf3cb0ef'
            'c2aa2854951bd823d89cc86d53a6d9712a6a885de6fbaf650ff3df48bfed85d7'
            'e5f95de7e2754eb2df03451885277ca4573b3770816043ae2e2f09d1f7232604'
            '8d612bef20ae3052fce0b8650575a80d87c94d772ec6d1f0c6a1ad591586ea44'
            '196bedc8a5bc8c30361c2c9518f648b45b498759cb6041827ff6fbfb8da2a8d1')

build() {
  true
}

package() {
    mkdir -p $pkgdir/${MINGW_PREFIX}/share/tessdata
    cp $srcdir/eng.* $pkgdir/${MINGW_PREFIX}/share/tessdata/
    find $pkgdir/${MINGW_PREFIX}/share/tessdata -type f -exec chmod 0644 {} \;
}
