# Contributor: ShreeDevi Kumar
# These files should be copied in the same location as package tesseract-ocr's tessdata directory

_realname=tesseract-ocr-eng
pkgname="${MINGW_PACKAGE_PREFIX}-${_realname}"
pkgver=3.02
pkgrel=1
pkgdesc="English language traineddata (3.02) for Tesseract OCR engine (mingw-w64)"
arch=('any')
url="https://code.google.com/p/tesseract-ocr/"
license=("Apache License 2.0")

source=("https://tesseract-ocr.googlecode.com/files/tesseract-ocr-3.02.eng.tar.gz")
sha256sums=('SKIP')

tessdatadir="tesseract-ocr/tessdata"

package() {
  mkdir -p "${pkgdir}/${MINGW_PREFIX}/share/tessdata"
  cp $srcdir/$tessdatadir/*.* $pkgdir/${MINGW_PREFIX}/share/tessdata

}

