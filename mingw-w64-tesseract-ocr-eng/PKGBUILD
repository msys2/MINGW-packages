# Maintainer: Alexey Pavlov <alexpux@gmail.com>
# Contributor: ShreeDevi Kumar
# tessbuilddir="/mingwxx/share/tessdata" - this should be the same location as package tesseract-ocr's tessdata directory

_realname=tesseract-ocr-eng
pkgname="${MINGW_PACKAGE_PREFIX}-${_realname}"
pkgver=3.02
pkgrel=1
pkgdesc="English language traineddata (3.02) for Tesseract OCR engine (mingw-w64)"
arch=('any')
url="https://code.google.com/p/tesseract-ocr/"
license=("Apache License 2.0")
makedepends=("${MINGW_PACKAGE_PREFIX}-pkg-config")
#depends=("${MINGW_PACKAGE_PREFIX}-tesseract-ocr")
options=()
source=("https://tesseract-ocr.googlecode.com/files/tesseract-ocr-3.02.eng.tar.gz")
sha256sums=('SKIP')

tessdatadir="tesseract-ocr/tessdata"
if  [[ "$CARCH" == "x86_64" ]]; then
  tessbuilddir="mingw64/share/tessdata"
else
  tessbuilddir="mingw32/share/tessdata"
fi

package() {
  mkdir -p "${pkgdir}/${tessbuilddir}"
  cp $srcdir/$tessdatadir/*.* $pkgdir/$tessbuilddir
}
