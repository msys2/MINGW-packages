+    codesetlen = strlen(codeset);
+    if (0 < codesetlen && codesetlen < sizeof buf - 2)
+        memmove(buf + 2, codeset, codesetlen + 1);
+    else
+        sprintf(buf + 2, "%u", GetACP());
+    codeset = memcpy(buf, "CP", 2);
