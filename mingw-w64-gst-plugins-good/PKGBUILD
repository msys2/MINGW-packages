# Maintainer: Alexey Pavlov <alexpux@gmail.com>

_realname=gst-plugins-good
_mingw_suff=mingw-w64-${CARCH}
pkgname="${_mingw_suff}-${_realname}"
pkgver=1.2.4
pkgrel=1
pkgdesc="GStreamer Multimedia Framework Base Plugins (mingw-w64)"
arch=('any')
url="http://gstreamer.freedesktop.org/"
license=("LGPL")
makedepends=("${_mingw_suff}-gcc"
    "${_mingw_suff}-pkg-config"
    "${_mingw_suff}-gstreamer"
    "gtk-doc"
    "${_mingw_suff}-python2"
    "${_mingw_suff}-speex"
    )
depends=(
    "${_mingw_suff}-cairo"
    "${_mingw_suff}-gdk-pixbuf2"
    "${_mingw_suff}-gst-plugins-base"
    "${_mingw_suff}-libcaca"
    "${_mingw_suff}-libsoup"
    "${_mingw_suff}-libvpx"
    "${_mingw_suff}-taglib"
    "${_mingw_suff}-wavpack"
    )
options=(!libtool strip staticlibs)
source=(${url}/src/${_realname}/${_realname}-${pkgver}.tar.xz
    0001-fix-X-detection.mingw.patch
    0002-fix-test-running.mingw.patch)
md5sums=('8aac024ee0cd98b67a3066ad31d8c677'
         '89b320a3a5d5585801eef1b8e0489483'
         'b4ff5991217a2544fa84aae471057299')

prepare() {
  cd ${srcdir}/${_realname}-${pkgver}
  patch -p1 -i ${srcdir}/0001-fix-X-detection.mingw.patch
  patch -p1 -i ${srcdir}/0002-fix-test-running.mingw.patch
  
  NOCONFIGURE=1 ./autogen.sh
}

build() {
  mkdir -p "${srcdir}/build-${MINGW_CHOST}"
  [[ -d "${srcdir}/build-${MINGW_CHOST}" ]] && rm -rf "${srcdir}/build-${MINGW_CHOST}"
  cp -r "${srcdir}/${_realname}-${pkgver}" "${srcdir}/build-${MINGW_CHOST}"
  cd "${srcdir}/build-${MINGW_CHOST}"
  ./configure \
    --prefix=${MINGW_PREFIX} \
    --build=${MINGW_CHOST} \
    --host=${MINGW_CHOST} \
    --disable-static \
    --enable-shared \
    --enable-silent-rules \
    --enable-experimental \
    --disable-gtk-doc
  make
}

package() {
  cd "${srcdir}/build-${MINGW_CHOST}"
  make -j1 DESTDIR="$pkgdir" install
  find "${pkgdir}${MINGW_PREFIX}" -name '*.def' -o -name '*.exp' | xargs -rtl1 rm
  rm -f ${pkgdir}${MINGW_PREFIX}/lib/gstreamer*/*.a
}
