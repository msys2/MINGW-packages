  _component=qt5-quick3d
  pkgdesc="Qt module and API for defining 3D content in Qt Quick (Development Tools, QtHelp) (mingw-w64)"
  depends=("${MINGW_PACKAGE_PREFIX}-qt5-declarative-debug"
