# Maintainer: Konstantin Podsvirov <konstantin@podsvirov.su>

_realname=aio-pika
pkgbase=mingw-w64-python-${_realname}
pkgname=("${MINGW_PACKAGE_PREFIX}-python-${_realname}")
pkgver=9.6.0
pkgrel=1
pkgdesc="AMQP 0.9 client designed for asyncio and humans (mingw-w64)"
arch=('any')
mingw_arch=('mingw64' 'ucrt64' 'clang64' 'clangarm64')
url='https://docs.aio-pika.com/'
msys2_repository_url='https://github.com/mosquito/aio-pika'
msys2_references=(
  'anitya: 46446'
  'aur: python-aio-pika'
  'purl: pkg:pypi/aio-pika'
)
license=('spdx:Apache-2.0')
depends=("${MINGW_PACKAGE_PREFIX}-python"
         "${MINGW_PACKAGE_PREFIX}-python-aiormq"
         "${MINGW_PACKAGE_PREFIX}-python-exceptiongroup"
         "${MINGW_PACKAGE_PREFIX}-python-yarl")
makedepends=("${MINGW_PACKAGE_PREFIX}-python-build"
             "${MINGW_PACKAGE_PREFIX}-python-installer"
             "${MINGW_PACKAGE_PREFIX}-python-poetry-core"
             "${MINGW_PACKAGE_PREFIX}-python-uv-build"
             "${MINGW_PACKAGE_PREFIX}-python-wheel")
options=('!strip')
source=("https://pypi.org/packages/source/${_realname::1}/${_realname/-/_}/${_realname/-/_}-${pkgver}.tar.gz"
        "${msys2_repository_url}/raw/refs/tags/${pkgver}/COPYING")
sha256sums=('7cc15ee603d3cc8899c4272b359e343303e0bc4f194da529bbfc84fb934c791e'
            'f597f46bb7c16287b809e80c197e74ecb273c2a5fafc137b496095a168f5aa54')

build() {
  cp -r "${_realname/-/_}-${pkgver}" "python-build-${MSYSTEM}" && cd "python-build-${MSYSTEM}"

  python -m build --wheel --skip-dependency-check --no-isolation
}

package() {
  cd "python-build-${MSYSTEM}"

  MSYS2_ARG_CONV_EXCL="--prefix=" \
    python -m installer --prefix=${MINGW_PREFIX} \
    --destdir="${pkgdir}" dist/*.whl

  install -Dm644 "${srcdir}/COPYING" "${pkgdir}${MINGW_PREFIX}/share/licenses/python-${_realname}/COPYING"
}
