_pkgver=5.212.0-alpha4
pkgver=${_pkgver//-/}
pkgrel=1
pkgdesc="Webkit module for Qt5 (mingw-w64)"
arch=('any')
url="https://github.com/annulen/webkit/wiki"
options=(!strip)
