# Contributor: J. Peter Mugaas <jpmugaas@suddenlink.net)

_pyname=Pyphen
_realname=pyphen
pkgbase=mingw-w64-python-${_realname}
pkgname=("${MINGW_PACKAGE_PREFIX}-python2-${_realname}" "${MINGW_PACKAGE_PREFIX}-python3-${_realname}")
pkgver=0.9.4
pkgrel=1
pkgdesc="Pyphen is a pure Python module to hyphenate text using existing Hunspell hyphenation dictionaries (mingw-w64)"
arch=('any')
url='http://pyphen.org/'
license=('GPL2' 'LGPL2.1' 'MPL')
makedepends=("${MINGW_PACKAGE_PREFIX}-python2"
             "${MINGW_PACKAGE_PREFIX}-python3"
             "${MINGW_PACKAGE_PREFIX}-python3-setuptools"
             "${MINGW_PACKAGE_PREFIX}-python2-setuptools")
checkdepends=("${MINGW_PACKAGE_PREFIX}-python2-nose"
              "${MINGW_PACKAGE_PREFIX}-python3-nose")
options=('staticlibs' 'strip' '!debug')
source=("https://pypi.python.org/packages/source/P/${_pyname}/${_pyname}-${pkgver}.tar.gz")
noextract=("${_pyname}-${pkgver}.tar.gz")
sha256sums=('abfa9a0ab055341f6e250c1a6bef395c3a06f0e4cba216eeef37f617b32c0bd7')

prepare() {
  cd "$srcdir"/
  #Tar for Windows does not handle symlinks so create the same effect
  tar -xf ${_pyname}-${pkgver}.tar.gz || true
  cp ${_pyname}-${pkgver}/pyphen/dictionaries/*.dic .
  for builddir in python{2,3}-build; do
    rm -rf $builddir | true
    cp -r "${_pyname}-${pkgver}" $builddir
  done
}

check() {
  for pver in {2,3}; do
    msg "Python ${pver} test for ${CARCH}"
    cd "${srcdir}/python${pver}-build"
    ${MINGW_PREFIX}/bin/python${pver} setup.py nosetests
  done
}

package_python3-pyphen() {
  depends=("${MINGW_PACKAGE_PREFIX}-python3")

  cd "${srcdir}/python3-build"
  MSYS2_ARG_CONV_EXCL="--prefix=;--install-scripts=;--install-platlib=" \
  ${MINGW_PREFIX}/bin/python3 setup.py install --prefix=${MINGW_PREFIX} \
    --root="${pkgdir}" --optimize=1

  install -Dm644 COPYING "${pkgdir}${MINGW_PREFIX}/share/licenses/python3-${_realname}/COPYING"
  install -Dm644 COPYING.GPL "${pkgdir}${MINGW_PREFIX}/share/licenses/python3-${_realname}/COPYING.GPL"
  install -Dm644 COPYING.LGPL "${pkgdir}${MINGW_PREFIX}/share/licenses/python3-${_realname}/COPYING.LGPL"
  install -Dm644 COPYING.MPL "${pkgdir}${MINGW_PREFIX}/share/licenses/python3-${_realname}/COPYING.MPL"
}

package_python2-pyphen() {
  depends=("${MINGW_PACKAGE_PREFIX}-python2")

  cd "${srcdir}/python2-build"
  MSYS2_ARG_CONV_EXCL="--prefix=;--install-scripts=;--install-platlib=" \
  ${MINGW_PREFIX}/bin/python2 setup.py install --prefix=${MINGW_PREFIX} \
    --root="${pkgdir}" --optimize=1

  install -Dm644 COPYING "${pkgdir}${MINGW_PREFIX}/share/licenses/python3-${_realname}/COPYING"
  install -Dm644 COPYING.GPL "${pkgdir}${MINGW_PREFIX}/share/licenses/python3-${_realname}/COPYING.GPL"
  install -Dm644 COPYING.LGPL "${pkgdir}${MINGW_PREFIX}/share/licenses/python3-${_realname}/COPYING.LGPL"
  install -Dm644 COPYING.MPL "${pkgdir}${MINGW_PREFIX}/share/licenses/python3-${_realname}/COPYING.MPL"

}

package_mingw-w64-i686-python2-pyphen() {
  package_python2-pyphen
}

package_mingw-w64-i686-python3-pyphen() {
  package_python3-pyphen
}

check_mingw-w64-x86_64-python3-pyphen() {
  check_python3-pyphen
}

check_mingw-w64-x86_64-python2-pyphen() {
  check_python2-pyphen
}

package_mingw-w64-x86_64-python2-pyphen() {
  package_python2-pyphen
}

package_mingw-w64-x86_64-python3-pyphen() {
  package_python3-pyphen
}
