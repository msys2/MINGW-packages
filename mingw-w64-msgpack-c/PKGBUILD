# Maintainer: Yusuke Sasaki <y_sasaki@nuem.nagoya-u.ac.jp>

_realname=msgpack-c
pkgbase="mingw-w64-${_realname}"
pkgname="${MINGW_PACKAGE_PREFIX}-${_realname}"
pkgver=1.4.0
pkgrel=1
pkgdesc="MessagePack implementation for C and C++ / msgpack.org[C/C++]"
arch=('any')
url="https://github.com/msgpack/msgpack-c"
license=('custom:Boost Software License 1.0')
checkdepends=(
  "${MINGW_PACKAGE_PREFIX}-gtest"
)
depends=()
source=(
  "https://github.com/msgpack/msgpack-c/releases/download/cpp-$pkgver/msgpack-${pkgver}.tar.gz"
  "0010-detect-mingw.patch"
)
sha256sums=(
  "2136f71560dc634492095aca5fc6d0fec30ce981b34b9777e03a366fbe3f550b"
  SKIP
)

prepare() {
  cd "msgpack-${pkgver}"
  patch -p1 -i "${srcdir}/0010-detect-mingw.patch"
}

build() {
  cd "msgpack-${pkgver}"
  ./configure --prefix=${MINGW_PREFIX}
  make
}

check() {
  cd "msgpack-${pkgver}"
  make check
}

package() {
  cd "msgpack-${pkgver}"
  make DESTDIR="$pkgdir" install
}

# vim: set ft=sh ts=2 sw=2 et :
