# Maintainer: Dirk Stolle

_realname=cotp
pkgbase=mingw-w64-${_realname}-converters
pkgname=("${MINGW_PACKAGE_PREFIX}-${_realname}-converters")
pkgver=1.9.7
pkgrel=1
pkgdesc="Additional scripts for cotp to import from other OTP apps (mingw-w64)"
arch=('any')
mingw_arch=('mingw64' 'ucrt64' 'clang64' 'clangarm64')
url='https://github.com/replydev/cotp'
msys2_changelog_url='https://github.com/replydev/cotp/blob/main/CHANGELOG.md'
msys2_references=(
  'archlinux: cotp-converters'
  'purl: pkg:cargo/cotp'
)
license=('spdx:GPL-3.0-only')
depends=("${MINGW_PACKAGE_PREFIX}-cotp"
         "${MINGW_PACKAGE_PREFIX}-python")
source=("https://github.com/replydev/cotp/archive/v${pkgver}/${_realname}-${pkgver}.tar.gz")
sha256sums=('6234805a8eb20a71d2acb07ad8d7827bd5c98c653b7eb733bab0f90cbb9f6212')

package() {
  cd "${_realname}-${pkgver}"

  install -Dm0755 -t "$pkgdir${MINGW_PREFIX}/share/cotp/converters/" converters/*.py
  install -Dm644 LICENSE "${pkgdir}${MINGW_PREFIX}/share/licenses/${_realname}-converters/LICENSE"
}
