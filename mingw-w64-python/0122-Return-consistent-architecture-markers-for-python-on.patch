From 4f4a764595a50871a5955a0e5b53fbb6590e1bb2 Mon Sep 17 00:00:00 2001
From: =?UTF-8?q?Martin=20Storsj=C3=B6?= <martin@martin.st>
Date: Fri, 19 Nov 2021 12:18:06 +0200
Subject: [PATCH 122/N] Return consistent architecture markers for python on
 mingw/armv7

---
 Lib/distutils/util.py | 2 ++
 Lib/sysconfig.py      | 2 ++
 Python/getcompiler.c  | 2 ++
 configure.ac          | 3 +++
 4 files changed, 9 insertions(+)

diff --git a/Lib/distutils/util.py b/Lib/distutils/util.py
index 5b51c76..e3be1d0 100644
--- a/Lib/distutils/util.py
+++ b/Lib/distutils/util.py
@@ -46,6 +46,8 @@ def get_host_platform():
                     return 'mingw_x86_64_clang'
                 if 'arm64' in sys.version.lower():
                     return 'mingw_aarch64'
+                if 'arm' in sys.version.lower():
+                    return 'mingw_armv7'
                 return 'mingw_i686_clang'
             if 'amd64' in sys.version.lower():
                 return 'mingw_x86_64'
diff --git a/Lib/sysconfig.py b/Lib/sysconfig.py
index 7a34759..45b9574 100644
--- a/Lib/sysconfig.py
+++ b/Lib/sysconfig.py
@@ -678,6 +678,8 @@ def get_platform():
                     return 'mingw_x86_64_clang'
                 if 'arm64' in sys.version.lower():
                     return 'mingw_aarch64'
+                if 'arm' in sys.version.lower():
+                    return 'mingw_armv7'
                 return 'mingw_i686_clang'
             if 'amd64' in sys.version.lower():
                 return 'mingw_x86_64'
diff --git a/Python/getcompiler.c b/Python/getcompiler.c
index 2d935fe..fc8132c 100644
--- a/Python/getcompiler.c
+++ b/Python/getcompiler.c
@@ -20,6 +20,8 @@
 #define ARCH_SUFFIX " 64 bit (AMD64)"
 #elif defined(__aarch64__)
 #define ARCH_SUFFIX " 64 bit (ARM64)"
+#elif defined(__arm__)
+#define ARCH_SUFFIX " 32 bit (ARM)"
 #else
 #define ARCH_SUFFIX " 32 bit"
 #endif
diff --git a/configure.ac b/configure.ac
index f5be44c..81e94c3 100644
--- a/configure.ac
+++ b/configure.ac
@@ -5209,6 +5209,9 @@ case $host_os in
   aarch64-*-mingw*)
     PYD_PLATFORM_TAG+="mingw_aarch64"
     ;;
+  armv7-*-mingw*)
+    PYD_PLATFORM_TAG+="mingw_armv7"
+    ;;
   esac
   AC_MSG_RESULT($PYD_PLATFORM_TAG)
 esac
