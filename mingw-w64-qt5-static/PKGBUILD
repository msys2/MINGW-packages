  _build_tools=yes
  _build_tests=no
  _make_docs=no # docs in shared qt5 are sufficient
#  _ltcg="yes"
  _ltcg="no"
else
  _namesuff=
  _build_mode=("-release" "-force-debug-info" "-separate-debug-info")
  _with_icu=yes
  _with_fontconfig=yes
  _with_openssl=yes
  _with_dbus=yes
  _system_freetype=yes
