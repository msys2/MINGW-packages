 						 myNbPtsOnCur,
 						 myTol3d,
 						 myTolAng,
@@ -382,7 +391,7 @@
 	  Handle (Adaptor3d_CurveOnSurface) HCurvOnSurf = new Adaptor3d_CurveOnSurface( CurvOnSurf );
 
 	  Constr = new BRepFill_CurveConstraint( HCurvOnSurf,
