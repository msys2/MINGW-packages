# Maintainer: kez cleal <clealk@cardiff.ac.uk>

_realname=gw
pkgbase=mingw-w64-${_realname}
pkgname="${MINGW_PACKAGE_PREFIX}-${_realname}"
pkgver=0.4.3
pkgrel=1
pkgdesc="A genome browser for bam/cram and vcf files"
arch=(any)
mingw_arch=('ucrt64' 'clang64')
url="https://github.com/kcleal/gw"
license=('MIT')
makedepends=("${MINGW_PACKAGE_PREFIX}-gcc"
             "${MINGW_PACKAGE_PREFIX}-glfw"
             "${MINGW_PACKAGE_PREFIX}-skia"
)
depends=("${MINGW_PACKAGE_PREFIX}-htslib"
         "${MINGW_PACKAGE_PREFIX}-freeglut"
         "${MINGW_PACKAGE_PREFIX}-glew"
         "${MINGW_PACKAGE_PREFIX}-ncurses"
         "${MINGW_PACKAGE_PREFIX}-fontconfig"
         "${MINGW_PACKAGE_PREFIX}-dlfcn"
         "${MINGW_PACKAGE_PREFIX}-libpng" )
source=(https://github.com/kcleal/${_realname}/archive/refs/tags/v${pkgver}.tar.gz)
sha256sums=('9084f95c7e28146aedbeae591bbbcefe429556313e584f2776c5c8472c749253')

prepare() {
  cd ${_realname}-${pkgver}
}

build() {
    cd ${_realname}-${pkgver}
    LDFLAGS+="-L${PREFIX}/lib -L${PREFIX}/lib/skia" CPPFLAGS+="-I${PREFIX}/include -I${PREFIX}/include/skia -I${PREFIX}/include/ncurses" make
}

package() {
  ls
  cd "${srcdir}"
  mv "${pkgdir}${MINGW_PREFIX}/gw.exe" "${pkgdir}${MINGW_PREFIX}/bin"
  _exename=gw
  cp -n "${pkgdir}${MINGW_PREFIX}/.gw.ini" ~
}
