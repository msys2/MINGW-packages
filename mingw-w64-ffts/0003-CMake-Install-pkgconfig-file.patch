Subject: [PATCH 3/3] CMake: Install pkgconfig file

---
 CMakeLists.txt   | 4 ++--
 ffts.pc.cmake.in | 6 +++---
 2 files changed, 5 insertions(+), 5 deletions(-)

diff --git a/CMakeLists.txt b/CMakeLists.txt
index fa0eadb..b86fad3 100644
--- a/CMakeLists.txt
+++ b/CMakeLists.txt
@@ -537,7 +537,7 @@ if(ENABLE_STATIC OR ENABLE_SHARED)
 endif(ENABLE_STATIC OR ENABLE_SHARED)
 
 # generate packageconfig file
-if(UNIX)
+if(UNIX OR MINGW)
   include(FindPkgConfig QUIET)
   if(PKG_CONFIG_FOUND)
       # convert lists of link libraries into -lstdc++ -lm etc..
@@ -549,7 +549,7 @@ if(UNIX)
       install(FILES       "${CMAKE_CURRENT_BINARY_DIR}/ffts.pc"
               DESTINATION "${CMAKE_INSTALL_PREFIX}/lib/pkgconfig")
   endif(PKG_CONFIG_FOUND)
-endif(UNIX)
+endif(UNIX OR MINGW)
 
 install( FILES
     ${FFTS_HEADERS}
diff --git a/ffts.pc.cmake.in b/ffts.pc.cmake.in
index 43f38e9..3ccc4da 100644
--- a/ffts.pc.cmake.in
+++ b/ffts.pc.cmake.in
@@ -1,7 +1,7 @@
 prefix=@CMAKE_INSTALL_PREFIX@
-exec_prefix=${exec_prefix}
-libdir=${libdir}
-includedir=${includedir}
+exec_prefix=${prefix}
+libdir=${prefix}/lib
+includedir=${prefix}/include
 
 Name: @CMAKE_PROJECT_NAME@
 Description: fast Fourier transform library
