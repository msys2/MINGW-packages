# Maintainer: Matheus Catarino <matheus-catarino@hotmail.com>

_realname=imgui
pkgbase=mingw-w64-${_realname}
pkgname=("${MINGW_PACKAGE_PREFIX}-${_realname}")
pkgver=1.75
pkgrel=1
pkgdesc='Dear ImGui: Bloat-free Immediate Mode Graphical User interface for C++ with minimal dependencies (mingw-w64)'
url='https://github.com/ocornut/imgui'
arch=('any')
license=('MIT')
source=("${_realname}-${pkgver}.tar.gz::https://github.com/ocornut/${_realname}/archive/v${pkgver}.tar.gz")
sha256sums=('1023227fae4cf9c8032f56afcaea8902e9bfaad6d9094d6e48fb8f3903c7b866')

prepare() {
  cd ${srcdir}/${_realname}-${pkgver}
  chmod 644 -R .
}
package() {
  cd ${srcdir}/${_realname}-${pkgver}
  
  cp imgui*{.h,.cpp} ${pkgdir}/include
  cp -r docs/ ${pkgdir}/share
  cp -r examples/ ${pkgdir}/share
  cp -r misc/ ${pkgdir}/share
  install -Dm 644 LICENSE.txt -t "${pkgdir}/share/licenses/${_realname}"
}
