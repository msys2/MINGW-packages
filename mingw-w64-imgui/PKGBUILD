# Maintainer: Matheus Catarino <matheus-catarino@hotmail.com>

_realname=imgui
pkgbase=mingw-w64-${_realname}
pkgname=("${MINGW_PACKAGE_PREFIX}-${_realname}")
pkgver=1.75
pkgrel=1
pkgdesc='Dear ImGui: Bloat-free Immediate Mode Graphical User interface for C++ with minimal dependencies (mingw-w64)'
url='https://github.com/ocornut/imgui'
arch=('any')
license=('MIT')
makedepends=("${MINGW_PACKAGE_PREFIX}-gcc"
             "${MINGW_PACKAGE_PREFIX}-cmake")
_realver=${pkgver//./-}
_realpath=${_realname}-${_realname}-${_realver}
source=("${_realpath}.tar.gz::https://github.com/ocornut/${_realname}/archive/v${pkgver}.tar.gz")
sha256sums=('1023227fae4cf9c8032f56afcaea8902e9bfaad6d9094d6e48fb8f3903c7b866')

package() {
  cd ${srcdir}/${_realpath}/${_realname}/

  install -Dm 644 imgui*{.h,.cpp} -t "${pkgdir}${MINGW_PREFIX}/include"
  cp -r docs/ ${pkgdir}${MINGW_PREFIX}/share/
  cp -r examples/ ${pkgdir}${MINGW_PREFIX}/share/
  cp -r misc/ ${pkgdir}${MINGW_PREFIX}/share/
  install -Dm 644 LICENSE -t "${pkgdir}${MINGW_PREFIX}/share/licenses/${_realname}"
}
