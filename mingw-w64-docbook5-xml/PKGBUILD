          "http://www.oasis-open.org/docbook/xml/${ver}/rng/docbook.rnc" \
          "../../share/xml/docbook/schema/${ver}/rng/docbook.rnc" \
          "${pkgdir}${MINGW_PREFIX}/etc/xml/${_cat}"
