_realname=pm2
pkgbase=mingw-w64-${_realname}
pkgname="${MINGW_PACKAGE_PREFIX}-${_realname}"
pkgver=6.0.10
pkgrel=1
pkgdesc='Node.js Production Process Manager with a built-in Load Balancer (mingw-w64)'
arch=('any')
mingw_arch=('mingw64' 'ucrt64' 'clang64' 'clangarm64')
url='https://pm2.keymetrics.io'
msys2_repository_url='https://github.com/Unitech/pm2'
msys2_references=(
  'purl: pkg:npm/pm2'
)
license=('spdx:AGPL-3.0-or-later')
depends=("${MINGW_PACKAGE_PREFIX}-nodejs")
source=("https://registry.npmjs.org/${_realname}/-/${_realname}-${pkgver}.tgz")
sha256sums=('3cbeab28ccbff54d0108ed180a16b8c49caec9f12199b0f60b2a9c4367de4a59')
noextract=("${_realname}-${pkgver}.tgz")

package() {
  npm install -g \
    --cache npm-cache \
    --prefix "${pkgdir}${MINGW_PREFIX}" \
    "${_realname}-${pkgver}.tgz"
}
