post_install() {
  cd mingw32
  local _prefix=$(pwd -W)
  cd -
  local _it
# "somepackage" should be replaced with the name of your .EXE w/o 2 and .exe ext
# Like this:
# For "myexe2.exe", it would be "myexe2" .
  for _it in faker2; do
    sed -e "s|/mingw32|${_prefix}|g" \
        -i mingw32/bin/${_it}-script.py
  done
}

post_upgrade() {
  post_install
}
