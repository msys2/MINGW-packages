_realname=pdf2svg
pkgbase=mingw-w64-${_realname}
pkgname="${MINGW_PACKAGE_PREFIX}-${_realname}"
pkgver=0.2.3
pkgrel=2
pkgdesc="A pdf to svg converter"
arch=('any')
url="http://www.cityinthesky.co.uk/opensource/pdf2svg/"
license=('GPL')
depends=("${MINGW_PACKAGE_PREFIX}-poppler")
source=($pkgname-$pkgver.tar.gz::https://github.com/db9052/$_realname/archive/v$pkgver.tar.gz)
sha256sums=('4fb186070b3e7d33a51821e3307dce57300a062570d028feccd4e628d50dea8a')

build() {
  cd "${srcdir}"/$_realname-$pkgver

  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}"/$_realname-$pkgver

  make DESTDIR="${pkgdir}" install
}
