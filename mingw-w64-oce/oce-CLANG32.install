post_install() {
  _mingw=clang32
  cd ${_mingw}
  local _prefix=$(pwd -W)
  cd -
  sed -e "s|/${_mingw}|${_prefix}|g" -i ${_mingw}/lib/oce/OCE-libraries.cmake
  sed -e 's|;[A-Z]:\/[^ ;]*\?\/'${_mingw}'|;${_IMPORT_PREFIX}|g' -i ${_mingw}/lib/oce/OCE-libraries-release.cmake
}

post_upgrade() {
  post_install
}
