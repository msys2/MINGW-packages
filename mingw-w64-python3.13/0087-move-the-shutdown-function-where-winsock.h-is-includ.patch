diff --git a/configure.ac b/configure.ac
index 3253520..c0401f4 100644
--- a/configure.ac
+++ b/configure.ac
@@ -5515,7 +5515,7 @@ AC_CHECK_FUNCS([ \
   sched_setparam sched_setscheduler sem_clockwait sem_getvalue sem_open \
