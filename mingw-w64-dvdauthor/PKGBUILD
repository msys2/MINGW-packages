_realname=libdvdread
pkgbase=mingw-w64-${_realname}
pkgname=("${MINGW_PACKAGE_PREFIX}-${_realname}")
pkgver=5.0.0
pkgrel=1
pkgdesc='libdvdread is a library which provides a simple foundation for reading DVDs'
arch=('any')
license=('GPL')
makedepends=('autoconf' 'automake' 'libtool' 'make')
url="https://dvdnav.mplayerhq.hu/"
source=("https://www.videolan.org/pub/videolan/${_realname}/${pkgver}/${_realname}-${pkgver}.tar.bz2")
sha256sums=('SKIP')

prepare() {
	ln -s ${_realname}-${pkgver}/msvc/msvc/ msvc
	cd ${srcdir}/${_realname}-${pkgver}

	./configure --prefix=${MINGW_PREFIX}
}

build() {
	cd ${srcdir}/${_realname}-${pkgver}

	make
}

package() {
	cd ${srcdir}/${_realname}-${pkgver}

	make DESTDIR=${pkgdir} install
}
