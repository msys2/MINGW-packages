          ${MINGW_PREFIX}/bin/xmlcatalog --noout --add "rewriteURI" \
          "http://docbook.org/xml/$ver/rng/docbook.rnc" \
          "${MINGW_PREFIX}/share/xml/docbook/schema/rng/$ver/docbook.rnc" \
