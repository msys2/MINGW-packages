post_install() {
  mingw32/bin/gtk-update-icon-cache -q -t -f mingw32/share/icons/hicolor
  mingw32/bin/gtk-update-icon-cache -q -t -f mingw32/share/icons/Adwaita
  mingw32/bin/gtk-query-immodules-2.0 --update-cache
}

post_upgrade() {
  post_install
}

pre_remove() {
  rm -f mingw32/lib/gtk-2.0/2.10.0/immodules.cache
}
