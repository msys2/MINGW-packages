diff --git a/configure.ac b/configure.ac
index a0b2aba..84192b9 100644
--- a/configure.ac
+++ b/configure.ac
@@ -7180,7 +7180,7 @@ AC_MSG_RESULT([done])
 # For mingw build need additional library for linking
 case $host in
   *-*-mingw*)
-    LIBS="$LIBS -lversion -lshlwapi -lpathcch"
