
post_install() {
  for dirr in mingw32 mingw64; do
    [[ -d ${dirr} ]] && {
		pushd ${dirr} > /dev/null
		_PW=$(pwd -W)
		popd > /dev/null
		_PW=${_PW//\//\\\\\\\\}
		[[ -f ${dirr}/lib/Config.pm ]] && {
			sed -i "s|%RELOCATE%|${_PW}|g" \
				${dirr}/lib/Config.pm \
				${dirr}/lib/Config_heavy.pl \
				${dirr}/lib/CORE/config.h
		}
	}
  done
}

post_upgrade() {
  post_install
}
