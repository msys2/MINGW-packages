---
 deps/npm/bin/npm                | 4 ++--
 deps/npm/bin/npm.cmd            | 4 ++--
 deps/npm/lib/build.js           | 2 +-
 deps/npm/lib/config/defaults.js | 7 ++-----
 deps/npm/lib/npm.js             | 6 ++----
