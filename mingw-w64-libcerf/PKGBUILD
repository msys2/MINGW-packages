# Maintainer: Alexey Pavlov <alexpux@gmail.com>

_realname=libcerf
pkgbase=mingw-w64-libcerf
pkgname="${MINGW_PACKAGE_PREFIX}-libcerf"
provides=("${MINGW_PACKAGE_PREFIX}-${_realname}")
replaces=("${MINGW_PACKAGE_PREFIX}-${_realname}")
conflicts=("${MINGW_PACKAGE_PREFIX}-${_realname}")
pkgver=1.4
pkgrel=1
pkgdesc="A C library providing complex error, Dawson, Faddeeva, and Voigt functions. (mingw-w64)"
arch=('any')
url="http://apps.jcns.fz-juelich.de/doku/sc/start"
license=("BSD 2-Clause")
makedepends=("${MINGW_PACKAGE_PREFIX}-gcc")
depends=()
options=()
source=("http://apps.jcns.fz-juelich.de/src/${_realname}/${_realname}-${pkgver}.tgz")
sha256sums=('101265dd1e1b10339adb70b22b60e65ef12c4e01c4a3f52e508562eceef62272')

#prepare() {
#  cd "${srcdir}/${_realname}-${pkgver}"
#}

build() {
  [[ -d "${srcdir}/build-${MINGW_CHOST}" ]] && rm -rf "${srcdir}/build-${MINGW_CHOST}"
  mkdir -p "${srcdir}/build-${MINGW_CHOST}"
  cd "${srcdir}/build-${MINGW_CHOST}"
  ../${_realname}-${pkgver}/configure \
      --prefix=${MINGW_PREFIX} \
      --build=${MINGW_CHOST} \
      --host=${MINGW_CHOST}

  make
}

package() {
  cd "${srcdir}/build-${MINGW_CHOST}"
  make DESTDIR="${pkgdir}" install
}
