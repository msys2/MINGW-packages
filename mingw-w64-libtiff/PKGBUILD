# Maintainer: Alexey Pavlov <alexpux@gmail.com>

_realname=libtiff
_mingw_suff=mingw-w64-${CARCH}
pkgname="${_mingw_suff}-${_realname}"
pkgver=4.0.3
pkgrel=2
pkgdesc="Library for manipulation of TIFF images (mingw-w64)"
arch=('any')
url="http://www.remotesensing.org/libtiff"
license=("custom")
depends=("${_mingw_suff}-gcc-libs" "${_mingw_suff}-libjpeg-turbo" "${_mingw_suff}-zlib")
makedepends=("${_mingw_suff}-gcc")
options=('staticlibs' 'strip')
source=("ftp://ftp.remotesensing.org/pub/libtiff/tiff-${pkgver}.tar.gz")
md5sums=('051c1068e6a0627f461948c365290410')

build() {
  cd "${srcdir}/tiff-${pkgver}"
  export CFLAGS+=" -fno-strict-aliasing"
  export CXXFLAGS+=" -fno-strict-aliasing"

  mkdir -p ${srcdir}/build-${CARCH} && cd ${srcdir}/build-${CARCH}
  ../tiff-${pkgver}/configure \
    --prefix=${MINGW_PREFIX} \
    --build=${MINGW_CHOST} \
    --host=${MINGW_CHOST} \
    --target=${MINGW_CHOST} \
    --enable-static \
    --enable-shared
  make
}

package() {
  cd "${srcdir}/build-${CARCH}"
  make DESTDIR="${pkgdir}" install

  #rm -rf "${pkgdir}${MINGW_PREFIX}/share"
  cp ${srcdir}/tiff-${pkgver}/libtiff/{tiffiop,tif_dir}.h ${pkgdir}${MINGW_PREFIX}/include/
  cp libtiff/tif_config.h ${pkgdir}${MINGW_PREFIX}/include/
}
