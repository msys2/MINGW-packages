_realname=gsoap
_ver_major=2
_ver_minor=8
_ver_patch=70
_dir="${_realname}-${_ver_major}.${_ver_minor}"
_file="${_realname}_${_ver_major}.${_ver_minor}.${_ver_patch}.zip"

pkgbase=mingw-w64-${_realname}
pkgname="${MINGW_PACKAGE_PREFIX}-${_realname}"
pkgver="${_ver_major}.${_ver_minor}.${_ver_patch}"
pkgrel=1
pkgdesc="An extensive suite of portable C and C++ software to develop XML Web services with powerful type-safe XML data bindings."

license=('GPL2')
url="http://gsoap2.sourceforge.net"
source=(https://jaist.dl.sourceforge.net/project/gsoap2/${_dir}/${_file})
sha256sums=('5B6933394AE1C76FAA9A4814C44F74FC8AEEF521B57F18D62AE952ECF38D0EDD')

arch=('any')
depends=()
makedepends=()

build() {
  cd "${srcdir}/${_dir}"
  ./configure -C --disable-ssl
  make -j1
}

package() {
  cd "${srcdir}/${_dir}"
  make DESTDIR="${pkgdir}/" install
}
