_realname=recommonmark
pkgbase=mingw-w64-python-${_realname}
pkgname=("${MINGW_PACKAGE_PREFIX}-python2-${_realname}"  "${MINGW_PACKAGE_PREFIX}-python3-${_realname}")
pkgver=0.4.0
pkgrel=1
pkgdesc="A markdown parser for docutils (mingw-w64)"
arch=('any')
url='https://github.com/rtfd/recommonmark'
license=('MIT')
makedepends=("${MINGW_PACKAGE_PREFIX}-python2"
             "${MINGW_PACKAGE_PREFIX}-python2-commonmark>=0.7.3"
             "${MINGW_PACKAGE_PREFIX}-python2-docutils>=0.11"
             "${MINGW_PACKAGE_PREFIX}-python2-setuptools"
             "${MINGW_PACKAGE_PREFIX}-python3-sphinx>=0.3.1"
             "${MINGW_PACKAGE_PREFIX}-python3"
             "${MINGW_PACKAGE_PREFIX}-python3-commonmark>=0.7.3"
             "${MINGW_PACKAGE_PREFIX}-python3-docutils>=0.11"
             "${MINGW_PACKAGE_PREFIX}-python3-setuptools"
             "${MINGW_PACKAGE_PREFIX}-python3-sphinx>=0.3.1" )
checkdepends=("${MINGW_PACKAGE_PREFIX}-python2-pytest"
              "${MINGW_PACKAGE_PREFIX}-python3-pytest")
options=('staticlibs' 'strip' '!debug')
_gitcommit=c410abb565a3c4ad4de0ce204ab2fa2db8031cf1
source=("${_realname}"::"git+https://github.com/rtfd/recommonmark#commit=$_gitcommit"
        recommonmark-sphinx-refdomain-fix.patch
        recommonmark-fix-mdnode-parent.patch)
sha256sums=('SKIP'
            '7f291c26ef4a1cbf8d4d6afc5a3e654263f2249b4856bea8d4d7a1559f0df780'
            'e3291623126c85ca3177f606672278fd0776799ddb34e33b184b409eaf8273b2')

# Helper macros to help make tasks easier #
apply_patch_with_msg() {
  for _patch in "$@"
  do
    msg2 "Applying $_patch"
    patch -Nbp1 -i "${srcdir}/$_patch"
  done
}

del_file_exists() {
  for _fname in "$@"
  do
    if [ -f $_fname ]; then
      rm -rf $_fname
    fi
  done
}
# =========================================== #

prepare() {
  cd "${srcdir}"
  pushd ${_realname}
    apply_patch_with_msg \
     "recommonmark-sphinx-refdomain-fix.patch" \
     "recommonmark-fix-mdnode-parent.patch"
  popd
  for builddir in python{2,3}-build-${CARCH}; do
    rm -rf ${builddir} | true
    cp -r "${_realname}" "${builddir}"
  done
  for tool in cm2{html,latex,man,pseudoxml,xetex,xml}; do
    sed -r "s|(${tool}) |\12 |g" -i python2-build-${CARCH}/setup.py
  done
  # Set version for setuptools_scm
  export SETUPTOOLS_SCM_PRETEND_VERSION=$pkgver
}

# Note that build() is sometimes skipped because it's done in 
# the packages setup.py install for simplicity if you can do so.
# but sometimes, you want to do a check before install which would
# also trigger the build.
build() {
  for pver in {2,3}; do  
    msg "Python ${pver} build for ${CARCH}"  
    cd "${srcdir}/python${pver}-build-${CARCH}"
    ${MINGW_PREFIX}/bin/python${pver} setup.py build
#    if [ "${pver}" -eq "2" ]
#    then
#      make -C docs man text SPHINXBUILD=sphinx-build
#    else
#      make -C docs man text SPHINXBUILD=sphinx-build
#    fi
  done  
}

