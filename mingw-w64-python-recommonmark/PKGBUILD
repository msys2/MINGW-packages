package_python3-recommonmark() {
  depends=("${MINGW_PACKAGE_PREFIX}-python3"
           "${MINGW_PACKAGE_PREFIX}-python3-commonmark>=0.7.3"
           "${MINGW_PACKAGE_PREFIX}-python3-docutils>=0.11"
           "${MINGW_PACKAGE_PREFIX}-python3-sphinx>=0.3.1")
  #This package install is needed for .fixups with .EXE's 
  #in the bit directory.  The install files "python-exe-installs"
  #and should be renamed to your _realname .
  install=${_realname}3-${CARCH}.install

  cd "${srcdir}/python3-build-${CARCH}"
  MSYS2_ARG_CONV_EXCL="--prefix=;--install-scripts=;--install-platlib=" \
  ${MINGW_PREFIX}/bin/python3 setup.py install --prefix=${MINGW_PREFIX} \
    --root="${pkgdir}" --optimize=1 --skip-build

  install -Dm644 license.md "${pkgdir}${MINGW_PREFIX}/share/licenses/python3-${_realname}/license.md"
  install -Dm 644 README.md CHANGELOG.md -t "${pkgdir}${MINGW_PREFIX}/share/doc/python3-${_realname}"
#  install -Dm 644 docs/_build/text/*.txt -t "${pkgdir}${MINGW_PREFIX}/share/doc/python3-${_realname}"
#  install -Dm 644 docs/_build/man/recommonmark.1 "${pkgdir}${MINGW_PREFIX}/share/man/man1/python3-${_realname}.1"

# This entire section should be removed if the package does NOT install
# anything in the /mingw*/bin directory.
### begin section ###
  local PREFIX_WIN=$(cygpath -wm ${MINGW_PREFIX})
  # fix python command in files
  for _f in "${pkgdir}${MINGW_PREFIX}"/bin/*.py; do
    sed -e "s|/usr/bin/env |${MINGW_PREFIX}|g" \
        -e "s|${PREFIX_WIN}|${MINGW_PREFIX}|g" -i ${_f}
  done
#### end section ####
}

package_python2-recommonmark() {
  depends=("${MINGW_PACKAGE_PREFIX}-python2"
           "${MINGW_PACKAGE_PREFIX}-python2-commonmark>=0.7.3"
           "${MINGW_PACKAGE_PREFIX}-python2-docutils>=0.11"
