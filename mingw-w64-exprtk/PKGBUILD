# Maintainer: Alexey Pavlov <alexpux@gmail.com>

_realname=exprtk
pkgbase=mingw-w64-${_realname}
pkgname=("${MINGW_PACKAGE_PREFIX}-${_realname}")
pkgver=0.0.3
pkgrel=1
pkgdesc="C++ Mathematical Expression Toolkit Library (mingw-w64)"
arch=('any')
mingw_arch=('mingw64' 'ucrt64' 'clang64' 'clangarm64')
url='https://github.com/ArashPartow/exprtk'
msys2_repository_url='https://github.com/ArashPartow/exprtk'
license=('spdx:MIT')
source=("${_realname}-${pkgver}.tar.gz::https://github.com/ArashPartow/exprtk/archive/refs/tags/${pkgver}.tar.gz")
sha256sums=('f9dec6975e86c702033d6a65ba9a0368eba31a61b89d74f2b5d24457c02c8439')

package() {
  install -Dm644 "${srcdir}"/${_realname}-${pkgver}/exprtk.hpp \
    "${pkgdir}"${MINGW_PREFIX}/include/exprtk.hpp
  install -Dm644 "${srcdir}"/${_realname}-${pkgver}/readme.txt \
    "${pkgdir}"${MINGW_PREFIX}/share/docs/${_realname}/readme.txt

  install -Dm644 "${srcdir}"/${_realname}-${pkgver}/license.txt \
    "${pkgdir}"${MINGW_PREFIX}/share/licenses/${_realname}/LICENSE
}
